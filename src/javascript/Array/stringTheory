Strings in JS are immutable â†’ methods return a new string, not modify the original.

// ---------------------------------------------------------       ðŸ”¹ Searching.     ------------------------------------------------------>1

const str = "hello world";

// indexOf() â†’ First occurrence
str.indexOf("o"); // 4

// lastIndexOf() â†’ Last occurrence
str.lastIndexOf("o"); // 7

// includes() â†’ Check substring
str.includes("world"); // true

// startsWith() / endsWith()
str.startsWith("he"); // true
str.endsWith("ld"); // true

// ---------------------------------------------------------       ðŸ”¹ Transformation.     ------------------------------------------------------>2
// toUpperCase() / toLowerCase()
str.toUpperCase(); // "HELLO WORLD"
str.toLowerCase(); // "hello world"

// trim() â†’ remove spaces
"  hello  ".trim(); // "hello"

// padStart() / padEnd()
"5".padStart(3, "0"); // "005"
"5".padEnd(3, "0");   // "500"

// repeat()
"ha".repeat(3); // "hahaha"


// ---------------------------------------------------------       ðŸ”¹ Extracting.     ------------------------------------------------------>3

// slice(start, end)
str.slice(0, 5); // "hello"

// substring(start, end)
str.substring(0, 5); // "hello"

// substr(start, length) [legacy]
str.substr(0, 5); // "hello"


// ---------------------------------------------------------       ðŸ”¹ Splitting & Joining.     ------------------------------------------------------>4
// split() â†’ String â†’ Array
str.split(" "); // ["hello", "world"]

// join() is Array method, but often used with split()
["hello", "world"].join("-"); // "hello-world"


// ---------------------------------------------------------       ðŸ”¹ Regex Power.     ------------------------------------------------------ 5
str.match(/o/g); // ["o", "o"]
str.replace("world", "JS"); // "hello JS"
str.search(/wo/); // 6


